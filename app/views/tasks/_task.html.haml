.task{:id => "task_block_#{task.id}" }
  %span.toggler
    = form_for task, :remote => true do |f|
      = f.check_box :completed
  %span.text
    = task.text
  %span.remover
    = link_to image_tag("delete.png"), task_path(task), :method => :delete, :confirm => "Are you sure you want to delete this task?", :remote => true